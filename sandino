-- Function to get the current time as a formatted string
local function getCurrentTime()
    local currentTime = os.date("*t")
    return string.format("%02d:%02d:%02d - %02d/%02d/%04d",
        currentTime.hour, currentTime.min, currentTime.sec,
        currentTime.month, currentTime.day, currentTime.year)
end

-- Welcome message
game:GetService("StarterGui"):SetCore("SendNotification", {
    Title = "Welcome to Punk Hub!",
    Text = "Here are the supported games right now: Blox Fruit, Blade Ball.",
    Icon = "rbxassetid://15593571720" -- Replace with the actual asset ID for your icon
})

-- Additional welcome notification crediting Jude and Silent Caliber
game:GetService("StarterGui"):SetCore("SendNotification", {
    Title = "Credits",
    Text = "This Hub was made by Jude and Silent Caliber.",
    Icon = "rbxassetid://15593571720" -- Replace with the actual asset ID for your icon
})

-- Wait for 5 seconds
wait(5)

-- Check the current game's PlaceId
local gamePlaceId = game.PlaceId

-- Check if the game is supported and load the appropriate script
if gamePlaceId == 13772394625 then
    loadstring(game:HttpGet('https://raw.githubusercontent.com/triqxv/testburrr/main/premium'))()
elseif gamePlaceId == 2753915549 then
    -- Display a notification that the script is updating
    local updatingNotification = game:GetService("StarterGui"):SetCore("SendNotification", {
        Title = "Punk Hub Alert ⚠️ !!!",
        Text = "Script is updating. Please wait a few hours before executing the script again.",
        Icon = "rbxassetid://15593571720"
    })

    -- Loop to update the notification with the current time every second
    while wait(1) do
        updatingNotification.Text = "Script is updating. Please wait a few hours before executing the script again.\nCurrent Time: " .. getCurrentTime()
    end
else
    -- Display a notification for unsupported games
    game:GetService("StarterGui"):SetCore("SendNotification", {
        Title = "Punk Hub Alert ⚠️ !!!",
        Text = "Punk Hub doesn't support this game.",
        Icon = "rbxassetid://15593571720"
    })

    wait(1) 

    -- Display a notification with the list of supported games
    game:GetService("StarterGui"):SetCore("SendNotification", {
        Title = "Punk Hub Alert ⚠️ !!!",
        Text = "Only supported games: Blox Fruit, Blade Ball.",
        Icon = "rbxassetid://15593571720"
    })
end

-- Create a notification with the current time
local currentTimeNotification = game:GetService("StarterGui"):SetCore("SendNotification", {
    Title = "Current Time Notification", -- Required
    Text = "Current Time: " .. getCurrentTime(), 
    Duration = math.huge, -- Set duration to math.huge
    Icon = "rbxassetid://15593571720" 
})

-- Loop to update the notification with the current time every second
while wait(1) do
    currentTimeNotification.Text = "Current Time: " .. getCurrentTime()
end
